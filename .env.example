# ==================================
# Online Shoe Store - Environment Variables
# ==================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ==================================
# Database Configuration
# ==================================
MYSQL_ROOT_PASSWORD=your_secure_password
MYSQL_DATABASE=shoe_store
MYSQL_USERNAME=root
MYSQL_PASSWORD=your_secure_password
MYSQL_PORT=3306

# ==================================
# Application
# ==================================
APP_PORT=8080
APP_BASE_URL=http://localhost:8080

# ==================================
# ChromaDB Configuration
# ==================================
CHROMA_PORT=8001

# ==================================
# AI API Keys (REQUIRED for chatbot)
# ==================================
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Get your Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL_WORKER=claude-3-5-haiku-20241022
ANTHROPIC_MODEL_ORCHESTRATOR=claude-3-5-haiku-20241022

# ==================================
# AI Logging (Optional)
# ==================================
AI_LOGGING_REQUESTS=false
AI_LOGGING_RESPONSES=false
LOG_LEVEL_LANGCHAIN4J=INFO
LOG_LEVEL_ANTHROPIC=INFO

# ==================================
# VNPay Payment Gateway
# ==================================
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
REFUND_IP=localhost:8080

# ==================================
# JWT Configuration
# ==================================
JWT_SECRET=your_jwt_secret_key_at_least_32_characters

# ==================================
# Email Configuration (Gmail SMTP)
# ==================================
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password
SUPPORT_EMAIL=your_support_email@gmail.com

# ==================================
# Google OAuth2
# ==================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
